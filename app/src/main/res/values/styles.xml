<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider_bg</item>
    </style>
    <!--</style>-->
    <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MyCustomTextAppearance</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--共享元素低版本兼容页面主题-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--窗口透明化主题-->
    <style name="Transparent" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--去掉actionbar主题-->
    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 这里设置左上角可点击展开的小图标 -->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggle</item>
    </style>

    <style name="AppTheme.DrawerArrowToggle" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!--去掉actionbar主题 共享元素界面-->
    <style name="AppThemeNoActionBarForShareElement" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 这里设置左上角可点击展开的小图标 -->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowToggleBlack</item>
    </style>

    <style name="AppTheme.DrawerArrowToggleBlack" parent="Base.Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>


    <!--左侧功能菜单TextView文字-->
    <style name="left_menu_text" parent="@style/AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:drawableRight">@drawable/enter</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--场景界面底部FrameLayout-->
    <style name="bottom_frameLayout" parent="@style/AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
    </style>
    <!--场景界面底部ImageView-->
    <style name="bottom_btn" parent="@style/AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:scaleType">fitXY</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="AppPopupAnimation">
        <item name="android:windowEnterAnimation">@anim/app_popup_enter</item>
        <item name="android:windowExitAnimation">@anim/app_popup_exit</item>
    </style>

    <!--房屋设备checkbox样式-->
    <style name="LanlordHouseDescribeCbStyle">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:background">@drawable/circular_background</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <!--场景内容FrameLayout-->
    <style name="Scene_Content_FrameLayout" parent="@style/AppTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--场景内容文字-->
    <style name="scene_txt_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
    </style>

    <!--场景收听选择时间底层文字样式-->
    <style name="scene_time_choice_text">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingBottom">7.5dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">7.5dp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>
    <!--场景收听选择时间顶层文字样式-->
    <style name="scene_time_choice_top_text">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingBottom">7.5dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">7.5dp</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:visibility">invisible</item>
    </style>
</resources>
