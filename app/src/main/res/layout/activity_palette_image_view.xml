<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.lenovo.mytestcode.activity.PaletteImageViewActivity">
    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        >
        <com.dingmouren.paletteimageview.PaletteImageView
            android:id="@+id/palette1"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:paletteSrc="@drawable/pic_2" />

        <com.dingmouren.paletteimageview.PaletteImageView
            android:id="@+id/palette2"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:paletteSrc="@drawable/pic_10"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            />
    </LinearLayout>
    <com.dingmouren.paletteimageview.PaletteImageView
        android:id="@+id/palette3"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:paletteSrc="@drawable/pic_11"
        android:layout_below="@+id/linear"
        android:layout_centerHorizontal="true"
        />
    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/palette3"
        android:max="666"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        />
</RelativeLayout>
