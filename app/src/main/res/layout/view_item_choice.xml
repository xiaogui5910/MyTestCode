<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#F8F8F8"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time1"
            style="@style/scene_time_choice_text"
            android:text="15分钟"/>

        <TextView
            android:id="@+id/tv_time2"
            style="@style/scene_time_choice_text"
            android:text="30分钟"/>

        <TextView
            android:id="@+id/tv_time3"
            style="@style/scene_time_choice_text"
            android:text="60分钟"/>

        <TextView
            android:id="@+id/tv_time4"
            style="@style/scene_time_choice_text"
            android:text="90分钟"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_circle"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/shape_circle_bg_green"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_top_time1"
            style="@style/scene_time_choice_top_text"
            android:text="15分钟"/>

        <TextView
            android:id="@+id/tv_top_time2"
            style="@style/scene_time_choice_top_text"
            android:text="30分钟"/>

        <TextView

            android:id="@+id/tv_top_time3"
            style="@style/scene_time_choice_top_text"
            android:text="60分钟"/>

        <TextView
            android:id="@+id/tv_top_time4"
            style="@style/scene_time_choice_top_text"
            android:text="90分钟"/>

    </LinearLayout>

</RelativeLayout>